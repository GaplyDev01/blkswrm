# TradesXBT Environment Configuration

# LLM API Keys
# Copy this file to .env.local and fill in your API keys
# Never commit your real API keys to version control!

# OpenAI API Key - Get one at https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key - Get one at https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Perplexity API Key - Get one at https://www.perplexity.ai/
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Groq API Key - Get one at https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Solana Configuration
NEXT_PUBLIC_SOLANA_RPC_ENDPOINT=https://api.mainnet-beta.solana.com
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta

# Vercel Analytics (optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Deployment Environment
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NODE_ENV=development

# Optional: JWT Secret for Protected Routes (if implementing auth)
AUTH_SECRET=your_auth_secret_here

# CoinGecko API for market data (required)
COINGECKO_API_KEY=

# Vercel KV for Redis caching (required for deployment)
KV_URL=your_kv_url_here
KV_REST_API_URL=your_kv_rest_api_url_here
KV_REST_API_TOKEN=your_kv_rest_api_token_here
KV_REST_API_READ_ONLY_TOKEN=your_kv_rest_api_read_only_token_here